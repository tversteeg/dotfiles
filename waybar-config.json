{
  "layer": "top",
  "position": "bottom",
  "height": 24,

  //"modules-left": ["wlr/workspaces"],
  "modules-left": ["wlr/taskbar"],
  "modules-right": ["custom/todo", "systemd-failed-units", "privacy", "mpris", {{right-modules}} "network", "cpu", "memory", "disk", "clock", "tray"],

  // Left modules

  "wlr/workspaces": {
    "format": "{name}",
    "on-click": "activate",
  },

  "wlr/taskbar": {
    "format": "{icon} {title}",
    "tooltip-format": "{app_id}",
    "icon-size": 24,
    "icon-theme": "Numix-Circle",
    "active-first": true,
    "all-outputs": false,
    "markup": true,
    "on-click": "activate",
    "ignore-list": ["rhythmbox"],
  },

  // Right modules

  "custom/todo": {
    "exec": "~/.dotfiles/waybar-todo.sh",
    "return-type": "json",
    "format": "{}  ",
    "on-click": "/home/thomas/.cargo/bin/alacritty -e /home/thomas/.cargo/bin/hx -c /home/thomas/.config/helix/config.toml ~/Sync/todo.txt",
    "interval": 5,
  },
  "privacy": {
    "icon-size": 14,
    "spacing": 4,
  },
  "mpris": {
    "interval": 5,
    "format": "{dynamic} {status_icon}",
    "status-icons": {
      "playing": "󰐊",
      "paused": "󰏤",
      "stopped": "󰓛",
    },
    "player-icons": {
  		"default": "▶",
  		"firefox": "󰈹",
  		"floorp": "󰈹"
  	},
    "dynamic-order": [
      "artist",
      "title",
      "album",
    ],
    "artist-len": 20,
    "title-len": 20,
    "album-len": 20,
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "󰸈",
    "on-click": "helvum",
    "max-volume": 100,
    "scroll-step": 5,
    "format-icons": ["󰕿", "󰖀", "󰕾"],
  },
  "network": {
    "interface": "enp39s0",
    "format-ethernet": "{ipaddr} 󰈀",
    "format-wifi": "{essid} {icon}",
  },
  "clock": {
    "interval": 60,
    "tooltip": true,
    "format": "{:%H:%M}",
    "tooltip-format": "{:%Y-%m-%d}",
    "timezones": ["Europe/Amsterdam", "Asia/Ho_Chi_Minh"],
    "on-scroll-up": "tz-up",
    "on-scroll-down": "tz-down",
  },
  "cpu": {
    "interval": 10,
    "states": {
      "warning": 60,
      "critical": 90,
    },
    "format": "{}% 󰍛",
    "max-length": 10,
  }, 
  "memory": {
    "interval": 30,
    "states": {
      "warning": 60,
      "critical": 90,
    },
    "format": "{}% ",
  },
  "disk": {
    "interval": 30,
    "states": {
      "warning": 10,
      "critical": 5,
    },
    "format": "{free} 󱘲",
  },
  "tray": {
    "icon-size": 24,
    "spacing": 4,
    "show-passive-items": true,
  },
}
